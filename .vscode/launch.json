{
    "configurations": [
        {
            "name": "Debug Example",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}/examples/redirect-flow",
            "args": [
                "src/index.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "env": {
                "TS_NODE_PROJECT": "tsconfig.json"
            },
            "sourceMaps": true,
            "internalConsoleOptions": "openOnSessionStart",
            "preLaunchTask": "tsc: build - examples/redirect-flow/tsconfig.json"
        },
        {
            "name": "Debug Library",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "args": [
                "${workspaceFolder}/src/patreon.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "env": {
                "TS_NODE_PROJECT": "tsconfig.json"
            },
            "sourceMaps": true,
            "internalConsoleOptions": "openOnSessionStart",
        }
    ]
}
